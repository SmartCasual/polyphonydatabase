<h1>Edit titles</h1>

<ul>
  <% letter_options.each do |letter| %>
    <li>
      <% if letter == current_letter %>
        <%= letter %>
      <% else %>
        <%= link_to letter, url_for(letter: letter) %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= form_tag update_all_admin_titles_path do %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Function</th>
        <th># inclusions</th>
      </tr>
    </thead>

    <tbody>
      <% function_options = @functions.map {|f| [f.name, f.id] } %>
      <% @titles.each do |title| %>
        <%= fields_for("titles[]", title, builder: ActionView::Helpers::FormBuilder) do |f| %>
          <tr>
            <td><%= f.text_field :text %></td>
            <td class="functions">
              <%= f.select :function_ids,
                function_options,
                {},
                {
                  class: "select2",
                  multiple: true
                }
              %>
            </td>
            <td><%= title.inclusions_count %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <button>Save</button>
<% end %>

<h1>Attributions</h1>

<%= form_tag assign_attributions_path do %>
  <% Attribution.unattributed.group_by(&:name).each do |name, attribs| %>
    <h2><%= name %></h2>

    <table>
      <tr>
        <th>Select</th>
        <th>Piece</th>
        <th>Source</th>
        <th>Attrib. in source</th>
      </tr>

      <% attribs.each do |attrib| %>
        <tr>
          <td><%= check_box_tag "attribution_ids[]", attrib.id %></td>
          <td><%= attrib.inclusion.piece.title %></td>
          <td><%= attrib.inclusion.source.code %> (<%= attrib.inclusion.source.title %>)</td>
          <td><%= attrib.name %></td>
        </tr>
      <% end %>
    </table>

    <label>
      <%= check_box_tag "incorrectly_attributed" %>
      Incorrectly attributed?
    </label>

    <%= select_tag "composer_id", options_from_collection_for_select(Composer.all.order(:name), "id", "name") %>

    <button>Resolve</button>

    <%= link_to "Create new composer", new_composer_path, target: "_blank" %>
  <% end %>
<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title>MusicCms</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if admin? && logged_in? %>
      <p>Logged in as <%= current_user.username %> <%= button_to "Log out", admin_logout_path %></p>
    <% end %>

    <% if flash[:error] %>
      <p><%= flash[:error] %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
